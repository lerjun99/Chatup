@page "/contractlist"
@using ChatUp.Application.Features.Contracts.DTOs
@using ChatUp.Services
@inject ChatUp.Services.ContractService ContractService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject ChatUp.Services.EmailService EmailService

<h3 class="mb-4 fw-bold text-primary">
    <i class="bi bi-file-earmark-text me-2"></i>
    Contract Management
</h3>

<!-- ✅ Filter / Action Section -->
<div class="card shadow-sm border-0 rounded-4 p-3 mb-4">
    <div class="d-flex flex-wrap gap-2" style="flex-direction: column;">
        <div class="d-flex gap-2" >
            <button class="btn btn-primary btn-elegant" @onclick="CreateContract">
               <i class="fa-solid fa-file-signature"></i> New Contract
            </button>
            <button class="btn btn-secondary btn-elegant" @onclick="SendExpiryEmails">
               <i class="fa-solid fa-paper-plane"></i> Send Expiry Notifications
            </button>
        </div>
    </div>
</div>

<!-- ✅ Table Section -->
@if (contracts == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2 text-muted">Loading contracts...</p>
    </div>
}
else if (contracts.Count == 0)
{
    <div class="alert alert-warning text-center shadow-sm rounded-3">
        No contracts found.
    </div>
}
else
{
        <div class="table-wrapper">
            <div class="table-responsive scrollable-table" style="max-height:45vh !important">
                <table class="table table-hover align-middle user-table">
            <thead class="table-primary">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Expiration</th>
                    <th>Status</th>
                    <th class="sticky-actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in contracts)
                {
                    bool isExpiringSoon = c.ExpirationDate.HasValue && c.ExpirationDate.Value <= DateTime.UtcNow.AddDays(7);
                    <tr class="@(isExpiringSoon ? "table-warning" : "")">
                        <td class="text-start">@c.Title</td>
                        <td class="text-truncate" style="max-width: 300px;">@c.Description</td>
                        <td>@c.ExpirationDate?.ToShortDateString()</td>
                        <td>
                            @if (c.ExpirationDate.HasValue)
                            {
                                if (c.ExpirationDate.Value < DateTime.UtcNow)
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                                else if (isExpiringSoon)
                                {
                                    <span class="badge bg-warning text-dark">Expiring Soon</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">N/A</span>
                            }
                        </td>
                        <td class="sticky-actions">
                            <div class="action-buttons">
                                <button class="btn btn-sm btn-info text-white rounded-pill px-3" @onclick="() => ViewContract(c.Id)">
                                   <i class="fa-solid fa-eye"></i> View
                                </button>
                                <button class="btn btn-sm btn-warning text-dark rounded-pill px-3" @onclick="() => EditContract(c.Id)">
                                   <i class="fa-solid fa-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger rounded-pill px-3" @onclick="() => DeleteContract(c.Id)">
                                   <i class="fa-solid fa-trash"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
}

@code {
    private List<ContractDto>? contracts;

    protected override async Task OnInitializedAsync()
    {
        contracts = await ContractService.GetAllAsync();
    }

    private void CreateContract() => NavigationManager.NavigateTo("/contracts/create");
    private void ViewContract(int id) => NavigationManager.NavigateTo($"/contracts/view/{id}");
    private void EditContract(int id) => NavigationManager.NavigateTo($"/contracts/edit/{id}");

    private async Task DeleteContract(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this contract?"))
        {
            await ContractService.DeleteAsync(id);
            contracts = await ContractService.GetAllAsync();
            StateHasChanged();
        }
    }

    private async Task SendExpiryEmails()
    {
        var upcomingExpiry = contracts?
            .Where(c => c.ExpirationDate.HasValue &&
                        c.ExpirationDate.Value.Date <= DateTime.UtcNow.AddDays(7) &&
                        c.ExpirationDate.Value.Date >= DateTime.UtcNow.Date)
            .ToList();

        if (upcomingExpiry == null || !upcomingExpiry.Any())
        {
            await JSRuntime.InvokeVoidAsync("alert", "No contracts expiring within 7 days.");
            return;
        }

        foreach (var contract in upcomingExpiry)
        {
            string subject = $"Contract Expiring Soon: {contract.Title}";
            string body = $@"
                <p>Dear Admin,</p>
                <p>The contract <strong>{contract.Title}</strong> will expire on <strong>{contract.ExpirationDate?.ToShortDateString()}</strong>.</p>
                <p>Please review or renew the contract before expiration.</p>
                <p>Regards,<br/>ChatUp System</p>";

            await EmailService.SendEmailAsync("lerjun.barasona@odecci.com", subject, body);
        }

        await JSRuntime.InvokeVoidAsync("alert", "Expiry email notifications sent successfully!");
    }
}

