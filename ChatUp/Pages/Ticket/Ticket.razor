                <button class="btn btn-secondary px-4 shadow-sm" @onclick="GoBack">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </button>
              
                    <button class="btn btn-primary px-4 shadow-sm" @onclick="SubmitChanges">
                        <i class="bi bi-check-circle me-1"></i> Submit Changes
                    </button>
                
            </div>
        </div>
        }
    </div>
    <div class="card border-0 shadow-lg rounded-4 p-4 bg-white" style="
        overflow: auto;
        height: 260px;
    ">
        <h5 class="fw-bold text-dark mb-3">
            <i class="bi bi-clock-history me-2 text-primary"></i> Ticket History
        </h5>

