            NewStatus = selectedStatus,
            UpdatedBy = UserState.UserId,
            UpdatedAt = DateTime.UtcNow,
            Remarks = remarks 
        };

        try
        {
            var response = await Http.PutAsJsonAsync($"{AppConfig.ChatUrl}Tickets/UpdateStatus", payload);
            if (response.IsSuccessStatusCode)
            {
                updateMessage = $"✅ Status updated to '{selectedStatus}' with remarks: {remarks}";
                remarks = string.Empty; // clear after update
                await LoadTicket();
                await LoadHistory();
            }
            else
            {
                updateMessage = "⚠ Failed to update ticket status.";
            }
        }
        catch (Exception ex)
        {
            updateMessage = $"Error: {ex.Message}";
        }
        StateHasChanged();
    }
