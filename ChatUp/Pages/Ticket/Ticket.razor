    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || sessionChecked)
            return;

        sessionChecked = true;

        // 🔐 Validate route param
        var decrypted = LinkService.Unprotect(Uri.UnescapeDataString(EncryptedId));

        if (string.IsNullOrEmpty(decrypted) || !int.TryParse(decrypted, out var ticketId))
        {
            Navigation.NavigateTo("/unauthorized", true);
            return;
        }

        TicketId = ticketId;

        // 🔐 Validate session BEFORE loading data
        var sessionOk = await LoadSessionUser();
        if (!sessionOk)
        {
            await PerformLogoutAsync(notifyBackend: false);
            return;
        }

        // ✅ Now safe to load data
        await LoadTicket();
        await LoadHistory();

        StateHasChanged();
    }
    private async Task PerformLogoutAsync(bool notifyBackend = true)
    {
        try
        {
            if (notifyBackend && UserState.UserId.HasValue)
            {
                if (ChatService != null)
                    await ChatService.SetUserOfflineAsync(UserState.UserId.Value);

                var logoutCommand = new LogoutCommand { UserId = UserState.UserId.Value };
                await Http.PostAsJsonAsync(
                    AppConfig.ChatUrl + "Auth/Logout/logout",
                    logoutCommand
                );
            }

            await SessionStorage.ClearAsync();
            await LocalStorage.ClearAsync();

            UserState.UserId = null;
            UserState.Username = null;
            UserState.UserType = 0;

            if (AuthStateProvider is CustomAuthStateProvider customProvider)
                customProvider.NotifyUserLogout();

            if (ChatService != null)
                await ChatService.DisposeAsync();

            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Forced logout failed: {ex.Message}");
            Navigation.NavigateTo("/", forceLoad: true);
        }
    }
    private async Task<bool> LoadSessionUser()
    {
        try
        {
            string encUserType = null;

            if (await SessionStorage.ContainKeyAsync("UserType"))
                encUserType = await SessionStorage.GetItemAsync<string>("UserType");
            else if (await LocalStorage.ContainKeyAsync("UserType"))
                encUserType = await LocalStorage.GetItemAsync<string>("UserType");

            if (string.IsNullOrWhiteSpace(encUserType))
                return false;

            var decrypted = LinkService.Unprotect(Uri.UnescapeDataString(encUserType));

            if (!int.TryParse(decrypted, out var userType))
                return false;

            UserState.UserType = userType;
            sessionUserType = userType;
            return true;
        }
        catch
        {
            return false;
        }
    }
