        {
            <div class="text-center text-muted py-3">
                <div class="spinner-border text-secondary mb-2" role="status"></div>
                <p><em>Loading history...</em></p>
            </div>
        }
        else if (!history.Any())
        {
            <div class="alert alert-light border text-center">
                <i class="bi bi-info-circle me-1"></i> No history records found.
            </div>
        }
        else
        {
            <ul class="timeline list-unstyled mb-0">
                @foreach (var h in history.OrderByDescending(x => x.UpdatedAt))
                {
                    <li class="timeline-item mb-4">
                        <span class="fw-bold">@h.UpdatedByName</span>
                        <small class="text-muted ms-1">@h.UpdatedAt.ToLocalTime().ToString("g")</small>
                        <div class="mt-1">
                            <span>From</span>
                            <span class="badge bg-secondary me-1">@h.OldStatus</span>
                            <i class="bi bi-arrow-right"></i>
                            <span>To</span>
                            <span class="badge bg-success ms-1">@h.NewStatus</span>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(h.Remarks))
                        {
                            <p class="mt-1 mb-0 text-muted"><em>@h.Remarks</em></p>
                        }
                    </li>
                }
            </ul>
        }
    </div>
}

