    private async Task LoadTicket()
    {
        try
        {
            var url = Navigation.ToAbsoluteUri($"{AppConfig.ChatUrl}Tickets/GetById/{TicketId}");
            ticket = await Http.GetFromJsonAsync<TicketDto>(url);
            
            if (ticket == null)
            {
                Navigation.NavigateTo("/ticketlist");
                return;
            }

            // ✅ Set current status
           selectedStatus = ticket.Status;
           selectedPriority = ticket.Priority; // initialize dropdown

            // ✅ Load history next
            await LoadHistory();

            // ✅ Set remarks value
            if (history != null && history.Any())
            {
                // Get the latest remark from ticket history
                remarks = history.OrderByDescending(h => h.UpdatedAt)
                                 .FirstOrDefault()?.Remarks ?? string.Empty;
            }
            else
            {
                // Fallback: use remark stored directly in the ticket (if applicable)
                remarks = ticket.Concern ?? string.Empty;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading ticket: {ex.Message}");
        }
    }

    private async Task LoadHistory()
    {
        try
        {
      
            var url = Navigation.ToAbsoluteUri($"{AppConfig.ChatUrl}Tickets/GetHistory/{TicketId}");
            history = await Http.GetFromJsonAsync<List<TicketHistoryDto>>(url);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading history: {ex.Message}");
            history = new List<TicketHistoryDto>();
        }
    }

    private async Task UpdateStatus()
    {
        if (ticket == null) return;

